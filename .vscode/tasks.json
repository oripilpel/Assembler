{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build assembler",
            "type": "shell",
            "command": "C:\\cygwin64\\bin\\gcc.exe",  // Path to your GCC executable
            "args": [
                "-g",
                "-ansi",
                "-Wall",
                "-pedantic",
                "assembler.c",
                "file.c",
                "macro.c",
                "label.c",
                "utils.c",
                "operation.c",
                "-o",
                "assembler"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
